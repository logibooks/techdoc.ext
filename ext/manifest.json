{
  "manifest_version": 3,
  "name": "Logibooks techdoc helper",
  "version": "0.1.0",
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:5177/*", "<all_urls>"],
  "background": { "service_worker": "sw.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
